@model List<Product>

<div class="container" style="display: flex;flex-direction: row; gap: 5px;">
    @if (Model.Count <= 0)
    {
        <h3 class="not-found" style="border: 1px solid #80808066; border-radius: 25px; width: max-content;padding: 5px 20px 5px 20px;color: #808080cf;" class="d-flex justify-content-center">
            Product not found
        </h3>
    }
    @foreach (var product in Model)
    {
        <li class="d-flex px-3" style="border: 1px solid gray; width: max-content; border-radius: 22px;">
            <a asp-controller="Shop" asp-action="ProductDetail" asp-route-id="@product.Id" style="color: #808080cf;">@product.Name</a>
        </li>
    }

</div>
