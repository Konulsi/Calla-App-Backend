@model BlogVM

@{
    ViewData["Title"] = "Blog";
    int sumCategoryProducts = 0;
}

<!-- Main star -->
<main>
    <section id="about-header-img">
        <div class="about-bg-img" style="background-image: url(../../assets/images/@Model.HeaderBackgrounds["PagesBg"])">
            <h1>BLOG</h1>
            <img src="~/assets/images/banner-on-logo.png" alt="">
        </div>
    </section>
    <section id="blog-post-img">
        <div class="container">
            <div class="row">
                <div class="col-lg-9 col-md-12 col-sm-12">
                    @foreach (var blog in Model.Blogs)
                    {
                        <div class="blog-slide1">
                            <div class="container my-5">
                                <div class="swiper mySwiper">
                                    <div class="swiper-wrapper">
                                        @foreach (var blogImage in blog.BlogImage)
                                        {
                                            <div class="swiper-slide slider1">
                                                <img src="~/assets/images/@blogImage.Image" alt="">
                                            </div>
                                        }

                                    </div>
                                </div>
                            </div>

                            <div class="container my-5">
                                <div class="blog-post-text">
                                    <div class="post-info-top">
                                        <div class="post-info-author">
                                            <span>BY @blog.Author.Name</span>
                                        </div>
                                        <div class="post-date">
                                            <span> @blog.CreateDate </span>
                                        </div>
                                    </div>
                                    <div class="post-title">
                                        <h3><a href="./BlogDetail.html">@blog.Title</a></h3>
                                    </div>
                                    <div class="post-description">
                                        <p> @blog.Description</p>
                                    </div>
                                    <div class="post-readmore-btn">
                                        <a href="./BlogDetail.html">READ MORE</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </div>

                <div class="col-lg-3 col-md-12 col-sm-12">
                    <div class="right">
                        <div class="blog-author">
                            <div class="author-img">
                                <img class="img-fluid" src="~/assets/images/team-member2.jpg" alt="">
                                <div class="author-detail">
                                    <div class="author-name">
                                        <h5>Heather Berry</h5>
                                    </div>
                                    <div class="author-email">
                                        <span>heatherberry@email.com</span>
                                    </div>
                                    <div class="author-social">

                                        <a class="social-icon" href="https://twitter.com/qodeinteractive/"
                                           target="_blank">
                                            <span class="social_twitter">
                                                <i class="fa-brands fa-twitter"
                                                   style="color:  #767575;"></i>
                                            </span>
                                        </a>
                                        <a class="social-icon" href="https://www.facebook.com/qodeinteractive/"
                                           target="_blank">
                                            <span class="social_facebook">
                                                <i class="fa-brands fa-facebook-f"
                                                   style="color: #767575;"></i>
                                            </span>
                                        </a>
                                        <a class="social-icon" href="https://www.linkedin.com/company/qode-themes/"
                                           target="_blank">
                                            <span class="social_linkedin">
                                                <i class="fa-brands fa-linkedin-in"
                                                   style="color: #767575;"></i>
                                            </span>
                                        </a>
                                        <a class="social-icon" href="https://www.instagram.com/p/CGpBwI9BYQf/"
                                           target="_blank">
                                            <span class="social_linkedin">
                                                <i class="fa-brands fa-square-instagram"
                                                   style="color: #767575;"></i>
                                            </span>
                                        </a>

                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="lates-posts">
                            <h4>LATEST POSTS</h4>
                            <div class="lates-post">
                                <div class="post-img">
                                    <img src="~/assets/images/blog-img1.jpg" alt="">
                                </div>
                                <div class="post-info">
                                    <p class="lates-title">5 Ideas To Decorate Your Table</p>
                                    <span class="lates-date"> 28.04.2023 </span>
                                </div>
                            </div>
                            <div class="lates-post">
                                <div class="post-img">
                                    <img src="~/assets/images/blog-single-img-2.jpg" alt="">
                                </div>
                                <div class="post-info">
                                    <p class="lates-title">Master Bedroom: The Furniture</p>
                                    <span class="lates-date"> 16.05.2023 </span>
                                </div>
                            </div>
                            <div class="lates-post">
                                <div class="post-img">
                                    <img src="~/assets/images/blog-single-img-6.jpg" alt="">
                                </div>
                                <div class="post-info">
                                    <p class="lates-title">The Best Large Round Mirrors</p>
                                    <span class="lates-date"> 08.03.2023 </span>
                                </div>
                            </div>
                        </div>

                        <div class="category">
                            <div class="category-header">
                                <h6>CATEGORIES</h6>
                            </div>
                            <div class="categories">
                                <ul>
                                    <li>
                                        <a href="" class="all-products">
                                            @foreach (var category in Model.Categories)
                                            {
                                                sumCategoryProducts += (int)category.ProductCategories?.Count;
                                            }
                                            All (@sumCategoryProducts)
                                        </a>
                                    </li>
                                    @foreach (var category in Model.Categories)
                                    {
                                        <li>
                                            <a href="" data-id="@category.Id" class="prod-size">@category.Name (@category.ProductCategories?.Count)</a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>

                        <div class="tag">
                            <div class="tag-header">
                                <h6>TAGS</h6>
                            </div>
                            <div class="tags">
                                <ul>
                                    @foreach (var tag in Model.Tags)
                                    {
                                        <li><a href="">@tag.Name,</a></li>
                                    }
                                </ul>
                            </div>
                        </div>

                        <div class="instagram">
                            <div class="instagram-header">
                                <h6>INSTAGRAM</h6>
                            </div>
                            <div class="instagram-photo">
                                <div class="row">
                                    @foreach (var miniImage in Model.MiniImages)
                                    {
                                        <div class="col-lg-4 col-md-4 col-sm-6 col-6">
                                            <div class="instagram-img">
                                                <img  src="~/assets/images/@miniImage.Image" alt="">
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="page-number">
            <ul>
                <li><a href=""><i class="fa-solid fa-angle-left" style="color: #8a8a8a; font-size: 14px;"></i></a></li>
                <li><a href="">1</a></li>
                <li><a href="">2</a></li>
                <li><a href=""><i class="fa-solid fa-chevron-right" style="color: #8a8a8a; font-size: 14px;"></i></a></li>
            </ul>
        </div>


    </section>
</main>
<!-- Main end -->
@section Scripts{
    <script src="~/assets/js/blog.js"></script>
}